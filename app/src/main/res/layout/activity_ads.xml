<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ads"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/ba_g"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05"
        android:background="@drawable/bc2">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_weight=".4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/f2"
            android:text="إزالة الإعلانات"

            android:id="@+id/txt"
            android:textStyle="bold"/>

    </LinearLayout>


    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:padding="30dp"

        android:background="@drawable/toop2"
        android:gravity="center"
        android:text="شاهد فيديو إعلاني قصير ليتم إزالة جميع الإعلانات في التطبيق لمدة يوم"
        android:textColor="@color/txt"
        android:textSize="28sp" />

    <Button
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:onClick="goo"
        android:text="مشاهدة الفيديو"
        android:textColor="@color/txt"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05"
        android:background="@drawable/toop2"
        android:visibility="invisible"
        android:id="@+id/wait"
        >

        <ImageView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:srcCompat="@drawable/sand" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:text="جار تحميل الفيديو"
            android:textColor="@color/colorPrimaryText"
            android:textSize="30dp"

            android:visibility="visible" />

        <ImageView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:srcCompat="@drawable/sand" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05"
        android:background="@drawable/toop2"
        android:onClick="back"
        android:visibility="invisible"
        android:id="@+id/back_layout"
        >



        <TextView
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/colorPrimaryText"
            android:text="عودة إلى القائمة الرئيسية"
            android:visibility="visible"


            />

        <ImageView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:srcCompat="@drawable/back"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="center"
        android:textSize="30dp"
        android:background="@drawable/toop2"
        android:layout_margin="5dp"
        android:textColor="@color/txt"
        android:visibility="invisible"
        />


</LinearLayout>